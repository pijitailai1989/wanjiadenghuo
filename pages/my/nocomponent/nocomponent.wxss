.list .item {
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  padding: 15rpx 30rpx;
  line-height: 1.5;
}

.list .item .label {
  font-size: 30rpx;
}

.list .item .value {
  font-size: 28rpx;
  color: #666;
}

.i_l_item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  line-height: 50rpx;
  height: 50rpx;
}

.yiji {
  border: none !important;
  background: #ecf7ff !important;
  color: #51b6ff !important;
}

.erji {
  border: none !important;
  background: #fff7ec !important;
  color: #ffae3f !important;
  margin-left:40rpx;
}
.item_left{
  flex: 1;
}

.item_right {
  display: flex;
  align-items: center;
  flex-flow: column wrap;
  justify-content:center;
  font-size: 26rpx;
  width: 140rpx;
}

.redFont {
  color: #ff5f5c;
  font-size: 40rpx;
}

