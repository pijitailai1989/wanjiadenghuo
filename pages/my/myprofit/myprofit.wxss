  overflow: hidden;
}
.remain_money{
  font-size: 70rpx;
  line-height: 1.25;
  font-weight: 400;
}
navigator{
  display: inline-block;  
}
.apply_now{
  margin-left: 20rpx;
}
.hasmony_count{
  font-size: 40rpx;
  font-weight: 300;
}
.apply_record{
