  background: #f1f1f1;
  color: #aaa;
  border-radius: 4rpx;
}
.picker{
  border: 1px solid #ddd;
  margin: 0 20rpx;
  text-align: center;
  flex: 1;
  border-radius: 10rpx;
  background: #fff;
}
.title{
  padding: 0 20rpx;
  color: #666;
  margin-bottom: 20rpx;
}
button[type="default"][plain]{
