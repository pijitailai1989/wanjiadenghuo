/* pages/my/mycard/mycard.wxss */
.relative{
  background: #fff;
  overflow: hidden;
  margin: 20rpx 30rpx 0
}
.l_t_left{
  max-width: 200rpx; 
  width: 150rpx; 
  border-right: 1px dashed #ddd;
}
.l_t_right{
  flex: 1;
}
.relative::before{
  content: "";
  width:24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #f2f2f2;
  display:block;
  position: absolute;
  top: -12rpx;
  left: 160rpx;
}
.relative::after{
  content: "";
  width:24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #f2f2f2;
  display:block;
  position: absolute;
  bottom: -12rpx;
  left: 160rpx;
}
.l_top{
  padding: 20rpx 20rpx 0;
}
.l_t_right {
  padding-left: 20rpx;
}
.l_bottom{
  height: 60rpx;
  line-height: 60rpx;
  background: #fff7f7;
}
.l_bottom .l_t_left{
  padding: 0 20rpx;
  border: none;
}
