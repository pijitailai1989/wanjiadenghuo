.top{
  margin: 20rpx 30rpx;
  border-radius: 50%;
}
.li{
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #ddd;
  padding: 0 30rpx;
}
.li:last-child{
  border: none;
}
.buttonGroup{
  margin: 30rpx;
}
.button.confirm{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
}

/*  */
.maskbox{
  width: 560rpx;
  box-sizing: border-box;
}
.money{
  border: 1px solid #ddd;
  border-radius: 10rpx;
  height: 70rpx;
  margin: 0 10rpx;
}
.maskbox .buttonGroup{
  height: 80rpx;
  display: flex;
  align-items: center;
  margin:0;
  text-align: center;
  border-top: 1px solid #ddd;
}

.buttonGroup view{
  flex: 1;
}
.buttonGroup view:nth-child(1){
  border-right: 1px solid #ddd;
  height: 80rpx;
  line-height: 80rpx;
}
/*选择列表  */

.selectlist{
  min-height: 68rpx;
  justify-content: flex-start;
}
.card{
  max-height: 210rpx;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}